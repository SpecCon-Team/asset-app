generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String         @id @default(cuid())
  email               String         @unique
  name                String?
  password            String
  role                Role           @default(USER)
  isAvailable         Boolean        @default(true)
  phone               String?
  department          String?
  location            String?
  bio                 String?
  profilePicture      String?        @db.Text
  resetPasswordToken  String?
  resetPasswordExpiry DateTime?
  emailVerified       Boolean        @default(false)
  verificationOTP     String?
  verificationExpiry  DateTime?
  loginAttempts       Int            @default(0)
  lockoutUntil        DateTime?

  // Two-Factor Authentication
  twoFactorEnabled    Boolean        @default(false)
  twoFactorSecret     String?        // TOTP secret
  backupCodes         String?        @db.Text // JSON array of backup codes

  // WhatsApp Integration
  isWhatsAppUser      Boolean        @default(false) // Identifies users created via WhatsApp
  whatsAppNotifications Boolean      @default(true)  // Enable/disable WhatsApp notifications

  tickets             Ticket[]       @relation("UserTickets")
  assigned            Ticket[]       @relation("AssignedTickets")
  assets              Asset[]
  comments            Comment[]
  notifications       Notification[] @relation("NotificationRecipient")
  sentNotifications   Notification[] @relation("NotificationSender")
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
}

model Asset {
  id              String   @id @default(cuid())
  asset_code      String   @unique
  name            String
  serial_number   String?
  remote_id       String?
  asset_type      String?
  condition       String?
  status          String   @default("available")
  assigned_to     String?
  scanned_by      String?
  scan_datetime   String?
  description     String?
  ownership       String?
  office_location String?
  extension       String?
  deskphones      String?
  mouse           String?
  keyboard        String?
  department      String?
  notes           String?

  // Relations
  owner           User?    @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  ownerId         String?
  tickets         Ticket[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Ticket {
  id           String    @id @default(cuid())
  number       String    @unique
  title        String
  description  String
  status       String    @default("open")
  priority     String    @default("medium")
  createdBy    User      @relation("UserTickets", fields: [createdById], references: [id], onDelete: Cascade)
  createdById  String
  assignedTo   User?     @relation("AssignedTickets", fields: [assignedToId], references: [id], onDelete: SetNull)
  assignedToId String?
  asset        Asset?    @relation(fields: [assetId], references: [id])
  assetId      String?
  resolution   String?
  comments     Comment[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // 'comment', 'ticket_status', 'ticket_assigned', 'asset_assigned'
  title     String
  message   String
  read      Boolean  @default(false)
  userId    String
  user      User     @relation("NotificationRecipient", fields: [userId], references: [id], onDelete: Cascade)
  senderId  String?  // User who triggered this notification
  sender    User?    @relation("NotificationSender", fields: [senderId], references: [id], onDelete: SetNull)
  ticketId  String?  // Optional link to related ticket
  assetId   String?  // Optional link to related asset
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String   // 'CREATE', 'UPDATE', 'DELETE', 'LOGIN', 'LOGOUT', 'EXPORT', etc.
  entityType  String   // 'User', 'Asset', 'Ticket', 'Comment', etc.
  entityId    String?  // ID of the affected entity
  userId      String?  // User who performed the action
  userEmail   String?  // Email of user (in case user is deleted)
  userName    String?  // Name of user (in case user is deleted)
  ipAddress   String?  // IP address of request
  userAgent   String?  // Browser/device info
  changes     String?  @db.Text // JSON string of what changed (before/after)
  metadata    String?  @db.Text // Additional context (JSON)
  status      String   @default("success") // 'success', 'failure', 'warning'
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([createdAt])
}

enum Role {
  ADMIN
  USER
  TECHNICIAN
}